
@{
    ViewBag.Title = "Donor Tax";
}

<div ng-controller="DonorTaxController as vm" ng-cloak>

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            {{vm.title}}
            <small>{{vm.description}}</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">{{vm.title}}</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-default box-solid">
                    <div class="box-header">
                        <h3 class="box-title">{{vm.subTitle}}</h3>
                        <small>({{vm.searchModel.filteredCount}} / {{vm.searchModel.totalCount}}) Total Records</small>
                        <span class="pull-right">
                            <small>Page {{vm.searchModel.page}} of {{vm.searchModel.totalPages}}</small>
                        </span>

                    </div><!-- /.box-header -->
                    <div class="box-body">

                        <table st-table="vm.people" st-pipe="vm.search" class="table table-responsive table-striped">
                            <thead>
                                <tr>
                                    <th class="sort-header" st-sort="Name">Name</th>
                                    <th class="sort-header" st-sort="LookupId">Lookup Id</th>
                                    <th class="sort-header" st-sort="FinderNumber">Finder Number</th>
                                    <th class="sort-header">Address</th>
                                    <th class="sort-header">City</th>
                                    <th class="sort-header">State</th>
                                    <th class="sort-header">Zipcode</th>
                                    <th class="sort-header" st-sort="Phone">Phone</th>
                                    <th class="sort-header" st-sort="Email">Email</th>
                                    <th class="sort-header"></th>
                                </tr>
                                <tr>
                                    <th><input type="text" st-clear-key st-search="name" class="form-control" placeholder="Donor Name" /></th>
                                    <th><input type="text" st-clear-key st-search="lookupId" class="form-control" placeholder="Lookup Id" /></th>
                                    <th><input type="text" st-clear-key st-search="finderNumber" class="form-control" placeholder="Finder Number" /></th>
                                    <th><input type="text" st-clear-key st-search="address" class="form-control" placeholder="Address" /></th>
                                    <th><input type="text" st-clear-key st-search="city" class="form-control" placeholder="City" /></th>
                                    <th><input type="text" st-clear-key st-search="state" class="form-control" placeholder="State" /></th>
                                    <th><input type="text" st-clear-key st-search="zipcode" class="form-control" placeholder="Zip Code" /></th>
                                    <th><input type="text" st-clear-key st-search="phone" class="form-control" placeholder="Phone Number" /></th>
                                    <th><input type="text" st-clear-key st-search="email" class="form-control" placeholder="Email Address" /></th>
                                    <th st-toggle-all="vm.data.items"></th>
                                </tr>
                            </thead>
                            <tbody>
                            <tr ng-repeat="person in vm.people" st-select-row="person" st-select-mode="multiple">
                                <td>{{person.name}}</td>
                                <td>{{person.lookupId}}</td>
                                <td>{{person.finderNumber}}</td>
                                <td>
                                    <address>
                                        {{person.street}}<br>
                                        {{person.street2}}<br>
                                    </address>
                                </td>
                                <td>{{person.city}}</td>
                                <td>{{person.state}}</td>
                                <td>{{person.zipcode}}</td>
                                <td>{{person.phone}}</td>
                                <td>{{person.email}}</td>
                                <td>
                                    <!-- Split button -->
                                    <div>
                                        <div class="btn-group" uib-dropdown>
                                            <button id="split-button" type="button" class="btn btn-primary" ng-click="vm.viewTaxes(person)"><i class="icon ion-cash"></i> <span>Taxes</span></button>
                                            <button type="button" class="btn btn-primary" uib-dropdown-toggle>
                                                <span class="caret"></span>
                                                <span class="sr-only">Split button</span>
                                            </button>
                                            <ul class="dropdown-menu" uib-dropdown-menu role="menu" aria-labelledby="split-button">
                                                <li role="menuitem" >
                                                    <a ng-click="vm.edit(person)"><i class="icon ion-edit"></i> Edit</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="14" class="text-center">
                                        <uib-pagination total-items="vm.searchModel.filteredCount"
                                                        ng-model="vm.searchModel.page"
                                                        max-size="5"
                                                        items-per-page="vm.searchModel.pageSize"
                                                        class="pagination-sm"
                                                        boundary-link-numbers="true"
                                                        ng-change="vm.paged()"
                                                        rotate="false">
                                        </uib-pagination>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>

                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                    </div>
                    <!-- ./box-footer -->
                    <div class="overlay" ng-show="vm.isBusy">
                        <i class="fa fa-refresh fa-spin"></i>
                    </div>
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>

